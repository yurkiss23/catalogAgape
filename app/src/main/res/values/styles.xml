<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- alt application theme. -->
    <style name="TurquoiseTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/tu_colorPrimary</item>
        <item name="colorPrimaryDark">@color/tu_colorPrimaryDark</item>
        <item name="colorAccent">@color/tu_colorAccent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <!-- org theme. -->
    <style name="OrgTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/org_colorPrimary</item>
        <item name="colorPrimaryDark">@color/org_colorPrimaryDark</item>
        <item name="colorAccent">@color/org_colorAccent</item>
        <item name="color">@color/org_colorProgressBar</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Widget.Agape.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="titleTextColor">@color/colorPrimaryText</item>
        <item name="android:theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="packageGridBackgroundColor" parent="Widget.MaterialComponents.CardView">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="cardBackgroundColor">?attr/colorPrimaryDark</item>
        <item name="android:shadowRadius">16</item>
    </style>

    <style name="TextAppearance.Agape.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Widget.Agape.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="backgroundTint">?attr/colorPrimaryDark</item>
    </style>

    <style name="Widget.Agape.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">?attr/colorPrimary</item>
<!--        <item name="android:textStyle">italic</item>-->
    </style>

    <style name="Widget.Agape.Backdrop" parent="">
        <item name="android:background">?attr/color</item>
    </style>

    <style name="TextAppearance.Shrine.Title" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="TextAppearance.Shrine.TextInputLayout.HintText" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
    </style>

    <style name="My.ProgressBar.Horizontal" parent="Widget.AppCompat.ProgressBar.Horizontal">
        <item name="android:progressDrawable">?attr/color</item>
    </style>
    
    <style name="FAB.Button" parent="Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">?attr/colorPrimary</item>
        <item name="tint">?attr/colorAccent</item>
    </style>
    
